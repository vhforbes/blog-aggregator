{
  "compilerOptions": {
    "paths": { "src/*": ["./src"] },
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
